<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp"
    android:background="@drawable/card_background"
    android:layout_marginTop="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:elevation="2dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- Circular Background -->
        <View
            android:id="@+id/circleBackground"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_background_light_blue" />

        <!-- Expense Icon -->
        <ImageView
            android:id="@+id/expenseIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_shopping_blue"
            android:contentDescription="Expense Icon" />

    </FrameLayout>


    <!-- Expense Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/expenseTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Shopping"
            android:textSize="20sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="18dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="end">

            <!-- Expense Amount -->
            <TextView
                android:id="@+id/expenseAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¬10.00"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/blue"
                android:layout_gravity="end" />

            <TextView
                android:id="@+id/expensePercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5%"
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_medium"
                android:textColor="#0086FF"
                android:layout_marginTop="4dp"
                android:layout_gravity="end"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
