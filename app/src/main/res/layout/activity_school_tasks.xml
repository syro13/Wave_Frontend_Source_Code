<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->
            <RelativeLayout
                android:id="@+id/schoolHeaderBackground"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/header_dashboard">

                <!-- Header Content -->
                <ImageView
                    android:id="@+id/waveLogo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_wave_logo"
                    android:contentDescription="Wave Logo"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true" />

                <ImageView
                    android:id="@+id/profileIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_profile_placeholder"
                    android:contentDescription="Profile Icon"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true" />


                <TextView
                    android:id="@+id/greetingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="School Tasks"
                    android:textSize="25sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_below="@id/profileIcon"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"/>

            </RelativeLayout>

            <!-- Main Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:background="#FFFFFF">

                <LinearLayout
                    android:id="@+id/tasksToggleContainer"
                    android:layout_width="280dp"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="2dp"
                    android:background="@drawable/toggle_button_background"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/SchoolTasksButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_button_unselected"
                        android:gravity="center"
                        android:text="School"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:fontFamily="@font/archivo_medium"
                        android:textAllCaps="false"
                        android:padding="8dp" />

                    <TextView
                        android:id="@+id/homeTasksButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_button_selected"
                        android:gravity="center"
                        android:text="Home"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="@font/archivo_medium"
                        android:textAllCaps="false"
                        android:padding="8dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FFFFFF">

                <!-- Tasks Overview Section -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Tasks Overview Text -->
                    <TextView
                        android:id="@+id/tasksDueTodayTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tasks Overview"
                        android:gravity="start"
                        android:textSize="20sp"
                        android:textColor="@color/black" />

                    <!-- Inline Image -->
                    <ImageView
                        android:id="@+id/tasksOverviewImage"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_tasks_icon"
                        android:contentDescription="@string/tasks_icon" />
                </LinearLayout>

                <GridLayout
                    android:id="@+id/tasksSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"

                    android:layout_marginTop="16dp">

                    <!-- Completed tasks Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/light_blue"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingTop="10dp">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_tasks_completed"
                                android:contentDescription="@string/wellness" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/wellness"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:layout_marginTop="8dp"
                                android:paddingStart="15dp"
                                android:paddingEnd="15dp"
                                android:paddingTop="14dp"
                                android:gravity="start" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Budget Planner Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/light_blue"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingTop="10dp">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_budget"
                                android:contentDescription="@string/Budget_Planner" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/Budget_Planner"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:layout_marginTop="8dp"
                                android:paddingStart="15dp"
                                android:paddingEnd="15dp"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:gravity="start" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/light_blue"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingTop="10dp">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_school_tasks"
                                android:contentDescription="@string/school_tasks" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/school_tasks"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:layout_marginTop="8dp"
                                android:paddingStart="15dp"
                                android:paddingEnd="15dp"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:gravity="start" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/light_blue"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingTop="10dp">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_house_tasks"
                                android:contentDescription="@string/house_tasks" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/house_tasks"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:layout_marginTop="8dp"
                                android:paddingStart="15dp"
                                android:paddingEnd="15dp"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:gravity="start" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </GridLayout>



                <!-- Stay on Track Section -->
                <TextView
                    android:id="@+id/stayOnTrackTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stay on Track"
                    android:textSize="20sp"
                    android:layout_marginTop="24dp"
                    android:textColor="@color/black" />

                <!-- Grid for Stay on Track Shortcuts -->
                <GridLayout
                    android:id="@+id/stayOnTrackGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"

                    android:layout_marginTop="16dp">

                    <!-- Wellness Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/light_blue"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingTop="10dp">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_wellness"
                                android:contentDescription="@string/wellness" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/wellness"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:layout_marginTop="8dp"
                                android:paddingStart="15dp"
                                android:paddingEnd="15dp"
                                android:paddingTop="14dp"
                                android:gravity="start" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Budget Planner Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/light_blue"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingTop="10dp">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_budget"
                                android:contentDescription="@string/Budget_Planner" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/Budget_Planner"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:layout_marginTop="8dp"
                                android:paddingStart="15dp"
                                android:paddingEnd="15dp"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:gravity="start" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/light_blue"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingTop="10dp">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_school_tasks"
                                android:contentDescription="@string/school_tasks" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/school_tasks"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:layout_marginTop="8dp"
                                android:paddingStart="15dp"
                                android:paddingEnd="15dp"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:gravity="start" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/light_blue"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingTop="10dp">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_house_tasks"
                                android:contentDescription="@string/house_tasks" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/house_tasks"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:layout_marginTop="8dp"
                                android:paddingStart="15dp"
                                android:paddingEnd="15dp"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:gravity="start" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </GridLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="#C7F9FF"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/nav_icon_selector"
        app:itemTextColor="@color/nav_text_selector" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
