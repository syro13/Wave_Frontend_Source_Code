<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="How are you feeling?"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:id="@+id/moodGroup"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton android:id="@+id/rbHappy" android:text="ðŸ˜Š"/>
        <RadioButton android:id="@+id/rbNeutral" android:text="ðŸ˜"/>
        <RadioButton android:id="@+id/rbSad"    android:text="ðŸ˜ž"/>
    </RadioGroup>

    <TextView
        android:text="Time available"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/spinnerTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/plan_time_options"/>
    <EditText
        android:id="@+id/inputThoughts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What's on your mind today? (Optional)"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="6"
        android:maxLength="1800"
        android:layout_marginTop="16dp"
        android:padding="8dp"/>


    <Button
        android:id="@+id/btnSubmitPlan"
        android:text="Generate Plan"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
